@page
@model EarlyBirdnBird.Pages.Host.ReviewsModel
@{
    ViewData["Title"] = "Your Reviews";
}
<section id="reviews" class="container mt-4">
    <h1 class="display-4">Listing Reviews</h1>
    <div class="reviews-container mt-3">
        @foreach (var review in Model.Reviews)
        {
            <div class="review card mb-3">
                <div class="card-header">
                    <h2 class="h5">@review.Reviewer.UserName</h2>
                </div>
                <div class="card-body">
                    <h3 class="card-title">Review for: @review.Rental.Name</h3>
                    <p class="card-text">Comment: "@review.body"</p>
                </div>
            </div>
        }
    </div>
</section>
